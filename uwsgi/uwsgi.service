[Unit]
Description=uWSGI Emperor
After=syslog.target

[Service]
ExecStart=uwsgi --master --emperor /etc/uwsgi/sites --die-on-term --uid www-data --gid www-data
# Requires systemd version 211 or newer
RuntimeDirectory=uwsgi
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target